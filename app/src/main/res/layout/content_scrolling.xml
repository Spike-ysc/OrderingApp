<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dividerColor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yan.orderingapp.BuyActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">


                <TextView
                    android:id="@+id/function_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="好评度98%"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/to2_image"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rate_Text"
                android:gravity="center_vertical"
                android:text="去评价"
                android:textColor="@color/black"
                android:paddingRight="4dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/to2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="16dp">
        <TextView
            android:id="@+id/buy_money"
            android:layout_centerVertical="true"
            android:text="￥10.2"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/to_image"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/buy_dialog_Text"
            android:gravity="center_vertical"
            android:text="规格"
            android:textColor="@color/black"
            android:paddingRight="4dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/to_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
        <TextView
            android:textColor="@color/red"
            android:id="@+id/buy_msg"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
       <Button
           android:id="@+id/buy_sure"
           android:text="确 定"
           android:layout_margin="32dp"
           android:background="@color/red"
           android:textColor="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
